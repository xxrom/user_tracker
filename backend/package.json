{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:server": "tsc -p tsconfig.json",
    "build:tracker": "tsc src/tracker.ts --outDir generated/",
    "build:tracker-env": "dotenv -e .env.docker -- node ./scripts/public-tracker-env.js",
    "build": "yarn build:tracker && yarn build:tracker-env && yarn build:server",
    "start": "node dist/index.js",
    "prod": "yarn build && yarn start",
    "dev:server": "ts-node-dev src/index.ts --watch",
    "dev:tracker": "tsc src/tracker.ts --outDir generated/ --watch",
    "dev:tracker-env-build": "dotenv -e .env -- node ./scripts/public-tracker-env.js",
    "dev:tracker-env": "nodemon --exec 'yarn dev:tracker-env-build' --ignore public/tracker.js generated/*",
    "dev": "concurrently \"sleep 2 && yarn dev:server\" \"yarn dev:tracker\" \"yarn dev:tracker-env\"",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.3.0",
    "@fastify/static": "^7.0.3",
    "dotenv": "^8.6.0",
    "dotenv-cli": "^7.4.1",
    "fastify": "^4.24.3",
    "mongoose": "^6.12.3",
    "nodemon": "^2.0.22",
    "pino-pretty": "^10.2.0",
    "typescript": "^5.4.3",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.9.4",
    "prettier": "^3.2.5",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^2.0.0"
  }
}

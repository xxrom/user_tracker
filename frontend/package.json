{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:html-env": "dotenv -e .env.docker -- node ./scripts/public-html-env.js",
    "build": "yarn build:html-env && dotenv -e .env.docker -- next build",
    "dev:html-env": "nodemon --exec 'dotenv -e .env -- node ./scripts/public-html-env.js' --ignore 'public/*.html' --watch init/*.html --watch scripts/*.js",
    "dev": "concurrently \"yarn dev:html-env\" \"dotenv -e .env -- next dev\"",
    "start": "next start",
    "prod": "yarn build && yarn start",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write ."
  },
  "dependencies": {
    "@tanstack/react-table": "^8.15.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "next": "14.1.4",
    "react": "^18",
    "react-dom": "^18",
    "dotenv": "^8.6.0",
    "dotenv-cli": "^7.4.1",
    "@radix-ui/react-slot": "^1.0.2",
    "tailwind-merge": "^2.2.2",
    "nodemon": "^2.0.22",
    "typescript": "^5"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.19",
    "eslint": "^8",
    "eslint-config-next": "14.1.4",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1"
  }
}
